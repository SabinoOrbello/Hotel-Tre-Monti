@model Hotel_Tre_Monti.Models.Prenotazione

@{
    ViewBag.Title = "Dettaglio Prenotazione";
}

<h2>Dettaglio Prenotazione</h2>

<p>
    @Html.ActionLink("Torna alla Lista", "Index")
</p>

<!-- Mostra dettagli prenotazione -->
<div>
    <h4>Dettagli Prenotazione</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NumeroPrenotazione)
        </dt>
